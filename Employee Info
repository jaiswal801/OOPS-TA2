class EmployeeInfo {
    String name;
    int id;
    double salary;

    EmployeeInfo(String name, int id, double salary) {
        this.name = name;
        this.id = id;
        this.salary = salary;
    }

    void showDetails() {
        System.out.println(name + " ID: " + id + " Salary: " + salary);
    }
}
