class Customer {
    String name;
    double balance;
    Customer(String name, double balance) {
        this.name = name;
        this.balance = balance;
    }
    void deposit(double amount) {
        balance += amount;
    }
    void showBalance() {
        System.out.println(name + " has â‚¹" + balance + " in the account");
    }
}
